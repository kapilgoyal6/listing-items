<section class="login-block">
    <div class="container con-style con-size">
  <div class="row">
    <div class="col-md-12 login-sec">
      <h2 class="text-center">Login Now</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :email, class: "text-uppercase" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", :placeholder => "Email Address" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "text-uppercase" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: "form-control", :placeholder => "Password" %>
        </div>
 
        <div class="form-check">
        <br><br>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-login float-left" %>
            <a href="/users/sign_up" class="float-right">Sign Up</a>
          </div>
        </div><br>
      <% end %>
    </div>
    <div class="col-md-8 ">
    </div>
</div>
</section>



